<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".PhoneVerification">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="bottom"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BACKBTN"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backword_sign"

                    android:layout_marginTop="5dp"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#D0CECE"/>


            </LinearLayout>

        </LinearLayout>




    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="top"
        android:gravity="left"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/mon_regular"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Enter your phone number"
        android:textColor="#a2a2a2"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/mon_regular"
        android:background="@drawable/gray_btn_back"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="GET OTP"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/mon_bold"
        android:layout_marginRight="20dp"
        android:background="@drawable/gradient_back_redious"/>




</LinearLayout>