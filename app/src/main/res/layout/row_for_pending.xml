<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        app:cardMaxElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardBackgroundColor="#F3FFF3"
        app:cardElevation="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Have Assagined for Donation"
        android:textSize="@dimen/_14sdp"
        android:layout_gravity="center"
        android:textColor="#505050"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="horizontal"

       >
       <LinearLayout
           android:layout_width="@dimen/_200sdp"
           android:layout_height="wrap_content"
           android:layout_gravity="left|center"
           android:gravity="left|center"
           android:layout_marginLeft="15dp"
           android:orientation="vertical">


           <TextView
               android:id="@+id/patientName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Md.Shovo"
               android:textColor="#404040"
               android:textSize="@dimen/_13sdp"/>
           <TextView
               android:id="@+id/pateientNumber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#404040"
               android:textSize="@dimen/_13sdp"
               android:text="0123233445"/>
           <TextView
               android:id="@+id/adress"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#404040"
               android:textSize="@dimen/_13sdp"
               android:text="Kandirpaar,Cumilla"/>

       </LinearLayout>

        <Button
            android:id="@+id/requestedBlood"
            android:layout_width="@dimen/_60sdp"
            android:background="@drawable/round"
            android:text="A+"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="right|center"
            android:gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/time"
            android:textColor="#404040"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12.00 AM"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            android:layout_gravity="center">

            <Button
                android:id="@+id/acceptBtn"
                android:layout_weight=".3"
                android:background="#08990C"
                android:text="ACCEPT"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_13sdp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"/>
            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/rejectBtn"
                android:layout_weight=".3"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_13sdp"
                android:background="#DF0A0A"
                android:text="REJECT"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>